resource "aws_security_group" "bastion" {
  vpc_id        = "${var.vpc}"
  name          = "${var.env}-bastion"
  description   = "Allow trafic to bastion host"

  tags          = "${merge(map("Name", "sg-bastion-${var.name}-${var.env}"), var.tags)}"

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 8
    to_port     = 0
    protocol    = "icmp"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

